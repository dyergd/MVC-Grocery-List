@model IEnumerable<GroceryListProjectGD.Models.Entities.Item>

@{
    ViewData["Title"] = "GoShopping";
    Item itemCreation = new Item();
}

<h1>Go Shopping</h1>


@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="">
                        <label class="form-check-label" for="flexCheckChecked">@Html.DisplayFor(modelItem => item.Name)</label>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
    <link rel="stylesheet" href="~/css/StrikeThrough.css">



